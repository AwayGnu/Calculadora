<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculadora" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.Calculadora">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

    <style name="ButtonV1">
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="rippleColor">#E4E4E4</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:backgroundTint">@color/white</item> <!-- Quita el fondo de los botones -->
        <item name="android:stateListAnimator">@null</item> <!-- Quita el borde forzado de los Botones -->
        <!--<item name="android:background">?android:attr/selectableItemBackground</item> -->
    </style>

    <style name="TextViewV1">
        <item name="android:textIsSelectable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:maxLength">15</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">30sp</item>
    </style>

</resources>